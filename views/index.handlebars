<h1 class="card-header">Burgers</h1>

<div class="card-body">
  <h2 class="card-title">Available Burgers</h2>

  <ul>
    {{#each burgers}}
    {{#unless dataValues.devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2 class="card-title">Already eaten</h2>

  <ul>
    {{#each burgers}}
    {{#if dataValues.devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2 class="card-title">Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurger">Burger</label>
      <input type="text" class="form-control" placeholder="Burger?" id="newBurger" name="Burger">
    </div>

    <button class="btn btn-primary" id="subBtn" type="submit">Submit</button>
  </form>
</div>